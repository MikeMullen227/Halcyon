<div class="container">
  <h2> Edit <%= @job.name %> </h2>
  <%= form_for(@job, url: job_path(@job)) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_field :date %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>

    <div class="field">
      <%= f.label :location %><br />
      <%= f.text_field :location %>
    </div>

    <%= f.select :users, options_for_select(@user_array), {}, {:multiple => true} %>

    <div class="actions">
      <%= f.submit "Edit Job" %>
    </div>
  <% end %>
</div>


<script>
  $('#job_users').multiSelect({ keepOrder: true });
</script>
  

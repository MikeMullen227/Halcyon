<div class="container">
	<h2> Tasks Page </h2>


	<% @tasks.each do |task| %>
		<%= link_to task.name, task_path(task) %> | 
		<%= link_to "Delete", task_path(task), method: "delete" %> | 
		<%= link_to "Edit", edit_task_path(task), method: "get" %> 
		<br />

	<%end%>

	<br>


	<%= link_to "Create a new task", new_task_path %>
</div>

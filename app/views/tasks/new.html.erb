<div class="container">
  <div class="row">
    <div class="col-md-12 edit_job">
      <br>
      <br>
      <br>
      <div class="container">
        <h2>Create Task</h2>
        
        <%= form_for(@task, url: tasks_path) do |f| %>
        
        <div class="field">
          
          <%= f.hidden_field :job_id, :value => @job_id %>
        </div>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label :date %><br />
          <%= f.datetime_field :date %>
        </div>
        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_field :description %>
        </div>
        <div class="field">
          <%= f.label :location %><br />
          <%= f.text_field :location %>
        </div>
        <div class="field">
          <%= f.label :deadline %><br />
          <%= f.datetime_field :deadline %>
        </div>
        <div class="field">
          <%= f.label :employee %><br />
          
        </div>
        <%= f.select :users, options_for_select(@user_array), {}, {:multiple => true} %>
        
        <div class="actions">
          <%= f.submit "Create" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
$('#task_users').multiSelect({ keepOrder: true });
</script>
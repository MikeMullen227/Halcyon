<div class="container">
  <div class="row">
    <div class="col-md-12 edit_job">
      <br>
      <br>
     
      <div class="container">
        <h2> Edit <%= @task.name %> </h2>
        <%= form_for(@task, url: task_path(@task)) do |f| %>
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.label :date %><br />
          <%= f.date_field :date, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.label :location %><br />
          <%= f.text_field :location, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.label :deadline %><br />
          <%= f.date_field :deadline, class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.label :description %><br />
          <%= f.text_area :description, class: 'form-control'  %>
        </div>
        <div class="field">
          <%= f.label :employees %><br />
        </div>
          
        <%= f.select :users, options_for_select(@users, @task_users), {}, {:multiple => true} %>
        
        <div class="actions">
          <%= f.submit "Update" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
$('#task_users').multiSelect({ keepOrder: true });
</script>

<!DOCTYPE html>
<html>
  <head>
    <title>Halcyon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!--     <script src="/assets/jquery.multi-select.js" type="text/javascript" ></script> 
 -->  </head>

 <nav class="navbar navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
                    
                    <%= link_to "Halcyon Builders", "/", class: "navbar-brand" %> 
               
            </div>
              

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <li  >
                      <a id="test" href="#">About</a>
                  </li>
                  <li>
                      <a href="#">Services</a>
                  </li>
                  <li>
                      <a href="#">Contact</a>
                  </li>
<!-- 
                  <% if defined?(@nav_tabs) %>
                      <% @nav_tabs.keys.each do |tab| %>
                        <li>
                          <%= link_to tab, @nav_tabs[tab] %>
                        </li>
                      <% end %>
                   <% end %> 
                </ul>
 -->

                <% if user_signed_in? %> 
                  <% if current_user.role == 'admin' %>
                      <li <% if current_page?(admins_path) %>class="active"<% end %>>
                        <%= link_to 'Manage', '/admins' %>
                      </li>
                      <% elsif current_user.role == 'employee' %>
                         <% puts(current_user.id)%>
                         <li>
                       <%= link_to 'Dashboard', employee_path(current_user) %>
                      </li>
                  <% end %>
                <% end %> 
                </ul>


                <ul class="nav navbar-nav login">
                  <% if user_signed_in? %>
                    <li>
                      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
                    </li>
                  <% else %>
                    <li>
                      <%= link_to "Login", new_user_session_path %>
                    </li>
                  <% end %>  
                </ul>
                    
                <!--  -->
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <%= yield %>
  </body>
     <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>
      
</html>
    
    

